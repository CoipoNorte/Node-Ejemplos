<%- include("partials/_header") %>

        <main>
            <div class="row g-5">

                <div class="col-md-7 col-lg-8">
                    <h2 class="mb-3 text-center">Esperando cambios</h2>
                </div>

                <div class="col-md-5 col-lg-4 order-md-last">
                    <h2 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Editar</span>
                    </h2>
                
                    <form action="/update/<%= customer.id %>" method="POST">
                        
                        <div class="mb-3">
                            <label htmlFor="title" class="form-label">Pregunta</label>
                            <input
                                type="text"
                                name="pregunta"
                                value="<%= customer.pregunta %>"
                                placeholder="Pregunta"
                                class="form-control mb-3"
                                autofocus
                            />
                        </div>

                        <div class="mb-3">
                            <label htmlFor="title" class="form-label">Clave</label>
                            <input
                                type="text"
                                name="clave"
                                value="<%= customer.clave %>"
                                placeholder="Clave"
                                class="form-control mb-3"
                            />
                        </div>
                        
                        <div class="mb-3">
                            <label htmlFor="title" class="form-label">Respuesta</label>
                            <input
                                type="text"
                                name="respuesta"
                                value="<%= customer.respuesta %>"
                                placeholder="Respuesta"
                                class="form-control mb-3"
                            />
                        </div>
                        
                        <div class="mb-3">
                            <label htmlFor="title" class="form-label">Tipo</label>
                            <input
                                type="text"
                                name="tipo"
                                value="<%= customer.tipo %>"
                                placeholder="Tipo"
                                class="form-control mb-3"
                            />
                        </div>
                
                        <button type="submit" class="btn btn-primary">Salvar cambios</button>
                    </form>
                </div>

            </div>
        </main>

<%- include("partials/_footer") %>
