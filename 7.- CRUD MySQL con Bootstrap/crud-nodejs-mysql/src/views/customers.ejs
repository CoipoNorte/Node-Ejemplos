<%- include("partials/_header") %>

        <main>
            <div class="row g-5">        

                <div class="col-md-7 col-lg-8">
                    <h2 class="mb-3 text-center">Lista</h2>
                
                    <table class="table table-dark table-bordered table-hover">
                        <thead>
                            <tr>
                                <td>nÂ°</td>
                                <td>Name</td>
                                <td>Address</td>
                                <td>Phone</td>
                                <td>Actions</td>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
                            %>
                            <tr>
                                <td><%= (i + 1) %></td>
                                <td><%= customers[i].name %></td>
                                <td><%= customers[i].address %></td>
                                <td><%= customers[i].phone %></td>
                                <td class="d-flex gap-2">
                                    <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                                        Editar
                                    </a>
                                    <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                            <% } %> <% } %>
                        </tbody>
                    </table>
                </div>
        
                <div class="col-md-5 col-lg-4 order-md-last">
                    <h2 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Formulario</span>
                    </h2>
                
                    <form action="/add" method="POST">
                        <div class="mb-3">
                            <label htmlFor="title" class="form-label">Nombre</label>
                            <input
                                type="text"
                                name="name"
                                placeholder="Name"
                                class="form-control mb-2"
                                autofocus
                            />
                        </div>
                        
                        <div class="mb-3">
                            <label htmlFor="title" className="form-label">Correo</label>
                            <input
                                type="email"
                                name="address"
                                placeholder="Address"
                                class="form-control mb-2"
                            />
                        </div>
                        
                        <div class="mb-3">
                            <label htmlFor="title" className="form-label">Celular</label>
                            <input
                                type="text"
                                name="phone"
                                placeholder="Phone"
                                class="form-control mb-2"
                            />
                        </div>
                      
                        <button type="submit" class="btn btn-info">Agregar</button>
                    </form>
                </div>

            </div>
        </main>

<%- include("partials/_footer") %>
